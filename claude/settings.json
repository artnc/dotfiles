{
  "alwaysThinkingEnabled": true,
  "enableAllProjectMcpServers": true,
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "command": "say 'Claude finished'",
            "type": "command"
          }
        ],
        "matcher": "*"
      }
    ]
  },
  "includeCoAuthoredBy": false,
  "model": "opus",
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git log:*)",
      "Bash(git mv:*)",
      "Bash(git show:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(npx tsc:*)",
      "Bash(python3:*)",
      "Bash(tree:*)",
      "Bash(unzip:*)",
      "Bash(xargs basename:*)",
      "Read(//Applications/**)",
      "Read(//Users/art/Library/**)",
      "Read(//private/tmp/**)",
      "WebFetch(domain:*)",
      "WebSearch",
      "mcp__UnityMCP__apply_text_edits",
      "mcp__UnityMCP__capture_screenshot",
      "mcp__UnityMCP__create_script",
      "mcp__UnityMCP__delete_script",
      "mcp__UnityMCP__execute_menu_item",
      "mcp__UnityMCP__find_in_file",
      "mcp__UnityMCP__get_sha",
      "mcp__UnityMCP__list_resources",
      "mcp__UnityMCP__manage_asset",
      "mcp__UnityMCP__manage_editor",
      "mcp__UnityMCP__manage_gameobject",
      "mcp__UnityMCP__manage_scene",
      "mcp__UnityMCP__manage_script",
      "mcp__UnityMCP__manage_shader",
      "mcp__UnityMCP__read_console",
      "mcp__UnityMCP__read_resource",
      "mcp__UnityMCP__run_test",
      "mcp__UnityMCP__script_apply_edits",
      "mcp__UnityMCP__validate_script"
    ],
    "ask": [],
    "defaultMode": "acceptEdits",
    "deny": []
  },
  "theme": "dark-daltonized"
}
